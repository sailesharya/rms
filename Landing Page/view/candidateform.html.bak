              $(document).ready(function(){
                    $('div img.rating').click(function(e){
                        console.log("Hi");
                        var that=$(this);
                        var a=that.attr("alt");
                        that.attr("src","../img/star-on.png");
                        that.prevAll().attr("src","../img/star-on.png");
                        that.nextAll().attr("src","../img/star-off.png");

                        $(this).siblings("input").attr("value",a);
                });

    });
